<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:id="@+id/top_linear_layout"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue_1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/label_text"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:foregroundGravity="center"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/hanger"
            android:background="@drawable/hanger"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/headphone"
            android:background="@drawable/headphone"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:id="@+id/kasuwari"
            android:background="@drawable/kasuwari"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/rafflesia"
            android:background="@drawable/rafflesia"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/rollerskate"
            android:background="@drawable/rollerskate"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:id="@+id/bottom_linear_layout"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/square2_button"
            android:backgroundTint="@color/pink_1"
            android:textColor="@color/white"
            android:id="@+id/select_image"
            android:text="Input"
            android:textAllCaps="false"
            android:layout_margin="15dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/square2_button"
            android:backgroundTint="@color/pink_1"
            android:textColor="@color/white"
            android:id="@+id/text_speech_button"
            android:text="Baca"
            android:textAllCaps="false"
            android:layout_margin="15dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/square2_button"
            android:backgroundTint="@color/pink_1"
            android:textColor="@color/white"
            android:id="@+id/language_popup_menu"
            android:text="Bahasa"
            android:textAllCaps="false"
            android:layout_margin="15dp"
            android:onClick="showPopup"
            />
    </LinearLayout>

</FrameLayout>